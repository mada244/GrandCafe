<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.ForgotPasswordPage"
             Title="Forgot Password"
             BackgroundColor="#F0F0F0">

    <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
        <Label Text="Forgot Password"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#333333"
               HorizontalOptions="Center"
               Margin="0,20,0,20"/>

        <Label Text="Please enter your email address to receive a verification code."
               HorizontalOptions="Center"
               FontSize="16"
               TextColor="#505050"
               Margin="0,0,0,20"/>

        <Entry x:Name="EmailEntry"
               Placeholder="Enter your email"
               Keyboard="Email"
               FontSize="18"
               HorizontalOptions="FillAndExpand"
               Margin="0,0,0,20"
               PlaceholderColor="#AAAAAA"/>

        <Button Text="Continue"
                BackgroundColor="#C68017"
                TextColor="White"
                FontSize="16"
                CornerRadius="5"
                Clicked="OnContinueClicked"
                HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>
