<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.Pages.ConfirmOrderPage"
             Title="ConfirmOrderPage">

    <VerticalStackLayout Spacing="30" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">
        <!-- Confirmation image -->
        <Image Source="check_icon.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center"/>

        <!-- Confirmation message -->
        <Label Text="Your order has been placed successfully"
               FontSize="18"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>

        <Label Text="Your items have been placed and are on its way to being processed"
               FontSize="16"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>

        <!-- Track button -->
        <Button Text="Go to Home"
                BackgroundColor="#C68017"
                TextColor="White"
                CornerRadius="20"
                HorizontalOptions="Fill"
                Clicked="OnTrackOrderClicked"/>
    </VerticalStackLayout>
</ContentPage>